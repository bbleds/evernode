h1 Edit page

form(method="POST", action="/notes/#{note._id}?_method=PUT")
	.input-group
		label(for="title") Title
		input#title.form-control(type="text", name="title", value="#{note.title}")
	.input-group
		label(for="text") Text
		textarea#text.form-control(name="text") #{note.text}
	.input-group
		input(type="submit", value="Save")